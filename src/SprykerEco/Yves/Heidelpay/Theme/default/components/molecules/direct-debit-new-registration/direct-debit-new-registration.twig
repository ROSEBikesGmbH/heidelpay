{% extends model('component') %}

{% define config = {
    name: 'direct-debit-new-registration',
    tag: 'direct-debit-new-registration',
} %}

{% define data = {
    paymentOption: required,
    paymentMethod: required,
} %}

{% define attributes = {
    'payment-form-id': 'payment-form',
    'payment-option-input-name': data.paymentOption.vars.full_name,
    'payment-toggler-selector': 'input[target-selector*="js-payment-method"]',
    url: data.paymentMethod.paymentOptions.paymentFormActionUrl,
} %}

{% block body %}
    {{ form_widget(data.paymentOption) }}
    <div class="{{ config.name }}__option">
        <div class="form__field">
            <label for="direct-debit-account" class="label label--required">{{ 'payment.heidelpay.direct_debit.holder' | trans }}</label>
            <input type="text" name="ACCOUNT.HOLDER" id="direct-debit-account" class="input input--expand">
        </div>
        <div class="form__field">
            <label for="direct-debit-iban" class="label label--required">{{ 'payment.heidelpay.direct_debit.iban' | trans }}</label>
            <input type="text" name="ACCOUNT.IBAN" id="direct-debit-iban" class="input input--expand">
        </div>
    </div>
{% endblock %}
